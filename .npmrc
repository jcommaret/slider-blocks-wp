# Configuration NPM pour le projet Citeo Blocks

# Activer les workspaces (par défaut dans npm 7+)
workspaces=true

# Hoisting automatique des dépendances
hoist=true

# Afficher les warnings de peer dependencies
legacy-peer-deps=false

# Sauvegarder les dépendances exactes
save-exact=false

# Format du package-lock.json
package-lock=true

